@model DetailsViewModel
@{
    ViewData["Title"] = "Detail of commodities " + Model.Product.Name;
}

<div>
   <h1 class="display-5">@Model.Product.Name</h1>
   <hr />
   <img src="@($"/images/{Model.Product.Id}.jpg")" alt="@Model.Product.Name" class="img-thumbnail" />

   <p class="py-5">@Model.Product.Description</p>

   <p>Price : @Model.Product.Item.Price</p>

   <dl>
        @foreach (var item in Model.categories)
        {
               <dt>@item.Name</dt>
               <dd>@item.Description</dd>
        }
   </dl>

   <div>
       <a class="btn btn-primary" asp-controller="Home" asp-action="AddToCart" asp-route-itemId="@Model.Product.ItemId">Add to Cart</a>
   </div>
</div>
